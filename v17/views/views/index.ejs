<% include ../partials/header %>

    <header class="jumbotron">
        <div class="container">
            <h1>Views</h1>
            <p>Share and experience breathtaking views from all over the world!</p>
            <p>
                <a class="btn btn-primary btn-lg" href="/views/new">Share a View</a>
            </p>  
        </div>
    </header>
    
    <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% views.forEach(function(view){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                    <img src="<%= view.image %>">
                    <div class="caption">
                        <h4><%= view.name %></h4>
                    </div>
                    <p>
                        <a href="/views/<%= view._id %>" class="btn btn-primary">More Info</a>
                    </p>
                </div>
            </div>
        <% }); %>
    </div>
    
<% include ../partials/footer %>