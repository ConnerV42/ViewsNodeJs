<% include ../partials/header %>

<div class="row">
	<div class="col-md-4">
			<h1><%= user.firstName + " " + user.lastName %></h1>
		<div class="thumbnail">
			<img src="<%= user.avatarImage %>" alt="user profile image">
			<div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
		</div>
	</div>
	<div class="col-md-8">
		<h3><%= user.username %>'s views:</h3>
		<ul>
		<% views.forEach(function(view) { %>
			<li><a href="/views/<%= view.id %>"><%= view.name %></a></li>
		<% }); %>
		</ul>
	</div>
</div>

<% include ../partials/footer %>