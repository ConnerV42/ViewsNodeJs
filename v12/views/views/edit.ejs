<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center;">Edit <%= view.name %></h1>
        <div style="width: 30%; margin: 30px auto;">
            <form action="/views/<%= view._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="view[name]" value="<%= view.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="view[image]" value="<%= view.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="view[description]" value="<%= view.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/views">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>